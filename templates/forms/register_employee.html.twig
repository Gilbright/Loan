{% extends 'layout.html.twig' %}

 {% block stylesheets %}
     {{ parent() }}
     {{ encore_entry_link_tags('input_form') }}
 {% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('input_form') }}
{% endblock %}

{% block body %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Nouveau Employé</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Nouveau Employé</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- right column -->
                <div class="col-lg-12">
                    <form method="post">
                        <!-- general form elements disabled -->
                        <div class="card card-warning">
                            <div class="card-header">
                                <h3 class="card-title">Informations du nouveau employé</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <form>
                                    <div class="row">

                                        <div class="col-md-6">

                                            <div class="row">
                                                <div class="col">
                                                    <!-- text input -->
                                                    <div class="form-group">
                                                        <label>1 - Nom et prenoms</label>
                                                        <input type="text" class="form-control" name="nameSurname"
                                                               required="true" placeholder="Entrer ...">
                                                    </div>
                                                </div>
                                            </div>
                                            <!-- Date dd/mm/yyyy -->
                                            <div class="form-group">
                                                <label>2 - Date de naissance</label>

                                                <div class="input-group">
                                                    <div class="input-group-prepend">
                                                    <span class="input-group-text"><i
                                                                class="far fa-calendar-alt"></i></span>
                                                    </div>
                                                    <input type="date" required="true" name="birthDate" class="form-control">
                                                </div>
                                                <!-- /.input group -->
                                            </div>

                                            <div class="row">
                                                <div class="col">
                                                    <div class="form-group">
                                                        <label>3 - Genre</label>
                                                        <select class="form-control select2 select2-hidden-accessible"
                                                                style="width: 100%;" data-select2-id="1" tabindex="-1"
                                                                aria-hidden="true" name="gender">
                                                            <option data-select2-id="1">Homme</option>
                                                            <option selected="selected" data-select2-id="2">Femme
                                                            </option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col">
                                                    <!-- text input -->
                                                    <div class="form-group">
                                                        <label>4 - Nationalité</label>
                                                        <input type="text" name="nationality" class="form-control"
                                                               required="true" placeholder="Entrer ...">
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col">
                                                    <!-- text input -->
                                                    <div class="form-group">
                                                        <label>5 - Numero de telephone</label>
                                                        <div class="input-group">
                                                            <div class="input-group-prepend">
                                                                <span class="input-group-text"><i
                                                                            class="fas fa-phone"></i></span>
                                                            </div>
                                                            <input required="true" type="number" name="phoneNumber" class="form-control">
                                                        </div>

                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col">
                                                    <!-- text input -->
                                                    <div class="form-group">
                                                        <label>6 - E-mail</label>

                                                        <div class="input-group mb-3">
                                                            <div class="input-group-prepend">
                                                            <span class="input-group-text"><i
                                                                        class="fas fa-envelope"></i></span>
                                                            </div>
                                                            <input type="email" required="true" name="email" class="form-control"
                                                                   placeholder="Email">
                                                        </div>

                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                        <div class="col-md-6">

                                            <div class="row">
                                                <div class="col">
                                                    <div class="form-group">
                                                        <label>7 - Fonction</label>
                                                        <select class="form-control select2 select2-hidden-accessible"
                                                                style="width: 100%;" data-select2-id="1" tabindex="-1"
                                                                aria-hidden="true" name="role">
                                                            <option data-select2-id="1">Tresorier</option>
                                                            <option data-select2-id="1">Expert</option>
                                                            <option data-select2-id="1">Directeur</option>
                                                            <option selected="selected" data-select2-id="2">Secretaire
                                                            </option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col">
                                                    <!-- text input -->
                                                    <div class="form-group">
                                                        <label>8 - Numéro de la piece d'identité </label>
                                                        <input type="text" class="form-control" name="idDocNumber"
                                                               required="true"  placeholder="Entrer ...">
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col">
                                                    <!-- textarea -->
                                                    <div class="form-group">
                                                        <label>9 - Ajouter la photo de la piece d'identité</label>
                                                        <div class="input-group">
                                                            <div class="custom-file">
                                                                <input type="file" class="custom-file-input"
                                                                       required="true"   id="exampleInputFile">
                                                                <label class="custom-file-label" for="exampleInputFile">Choose
                                                                    file</label>
                                                            </div>
                                                            <div class="input-group-append">
                                                                <span class="input-group-text">Upload</span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col">
                                                    <!-- textarea -->
                                                    <div class="form-group">
                                                        <label>10 - Ajouter la photo d'identité</label>
                                                        <div class="input-group">
                                                            <div class="custom-file">
                                                                <input type="file" class="custom-file-input"
                                                                       required="true"   id="exampleInputFile">
                                                                <label class="custom-file-label" for="exampleInputFile">Choose
                                                                    file</label>
                                                            </div>
                                                            <div class="input-group-append">
                                                                <span class="input-group-text">Upload</span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col">
                                                    <!-- textarea -->
                                                    <div class="form-group">
                                                        <label>11 - Addresse </label>
                                                        <textarea class="form-control" name="address" rows="3"
                                                                  required="true"      placeholder="Entrer ..."></textarea>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col-sm-6">
                                                    <!-- checkbox -->
                                                    <div class="form-group clearfix">

                                                        <div class="icheck-primary d-inline">
                                                            <input type="checkbox" required="true" name="confirm" id="checkboxPrimary3">
                                                            <label for="checkboxPrimary3">
                                                                Nous confirmons la veracité des informations entrées.
                                                            </label>
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>

                                        </div>
                                    </div>
                                </form>
                            </div>
                            <!-- /.card-body -->
                            <div class="card-footer">

                                <button type="submit" class="btn btn-info col-md-12">Enregister</button>
                            </div>
                        </div>
                        <!-- /.card -->
                    </form>
                </div>
                <!--/.col (right) -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
{% endblock %}


