{% extends 'layout.html.twig' %}

{% block body %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>General Form</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">General Form</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- right column -->
                <div class="col-lg-12">

                    <!-- general form elements disabled -->
                    <div class="card card-warning">
                        <div class="card-header">
                            <div class="row">
                                <div class="col">
                                    <h3 class="card-title" >Informations des membres du groupe (Veuillez inserer les informations du leader de l'equipe en premier).</h3>
                                </div>
                                <div class="col">
                                    <a href="{{ path('app_sec_register_client') }}" type="button" class="btn btn-info float-right" >Ajouter un membre</a>
                                </div>
                            </div>
                        </div>

                        <!--LE tableau des data des clients du team -->
                        <div class="card-body table-responsive p-0">
                            {% if clientsData %}
                                <table class="table table-hover text-nowrap">
                                    <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Nom et prenoms</th>
                                        <th>Date de naissance</th>
                                        <th>Genre</th>
                                        <th>Profession</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                        {% for data in  clientsData %}
                                            <tr>
                                                <td>{{ data.id }}</td>
                                                <td>{{ data.id }}</td>
                                                <td>{{ data.id }}</td>
                                                <td><span class="tag tag-success">{{ data.id }}</span></td>
                                                <td>{{ data.id }}</td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            {% endif %}
                        </div>
                        <div class="card-footer">
                            {% if clientsData %}
                                <button type="submit" class="btn btn-info float-right">Enregister et continuer</button>
                            {% endif %}
                        </div>
                    </div>
                    <!-- /.card -->

                </div>
                <!--/.col (right) -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
{% endblock %}


