{% extends 'layout.html.twig' %}

{% block body %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>General Form</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">General Form</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- right column -->
                <div class="col-lg-12">

                    <!-- general form elements disabled -->
                    <div class="card card-warning">
                        <div class="card-header">
                            <div class="row">
                                <div class="col">
                                    <h3 class="card-title">Veuillez Entrer le numero de la piece d'identité du leader de
                                        l'equipe en premier.</h3>
                                </div>
                            </div>
                        </div>

                        <!--LE tableau des data des clients du team -->
                        <div class="card-body">
                            <form method="post">
                                <div class="row">
                                    <div class="col-md-10">
                                        <!-- text input -->
                                        <div class="form-group">
                                            <input type="text" class="form-control" name="IdNumber"
                                                   required="true" placeholder="Entrer le numero de la piece d'identité">
                                        </div>
                                    </div>
                                    <div class="col-md-2">
                                        <button type="submit" class="btn btn-info">Ajouter</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <!-- /.card -->

                    {% if clientsData|length > 0 %}
                        <div class="card card-warning">
                            <div class="card-header">
                                <div class="row">
                                    <div class="col">
                                        <h3 class="card-title">Informations des membres du groupe .</h3>
                                    </div>

                                </div>
                            </div>

                            <!--LE tableau des data des clients du team -->
                            <div class="card-body table-responsive p-0">
                                <table class="table table-hover text-nowrap">
                                    <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Nom et prenoms</th>
                                        <th>Date de naissance</th>
                                        <th>Genre</th>
                                        <th>Profession</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for data in  clientsData %}
                                        <tr>
                                            <td>{{ data.id }}</td>
                                            <td>{{ data.nameSurname }}</td>
                                            <td>{{ data.birthDate }}</td>
                                            <td>{{ data.gender }}</td>
                                            <td>{{ data.profession }}</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>

                            </div>
                            <div class="card-footer">
                                <form method="post">
                                    <button type="submit" class="btn btn-info btn-block">Enregister</button>
                                </form>
                            </div>
                        </div>
                    {% endif %}
                </div>
                <!--/.col (right) -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
{% endblock %}


