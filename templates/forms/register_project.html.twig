{% extends 'layout.html.twig' %}

{% block body %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>General Form</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">General Form</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- right column -->
                <div class="col-lg-12">
                    <form method="post">
                        <!-- general form elements disabled -->
                        <div class="card card-warning">
                            <div class="card-header">
                                <h3 class="card-title">Informations du projet</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <form>
                                    <div class="row">
                                        <div class="col">
                                            <!-- text input -->
                                            <div class="form-group">
                                                <label>Nom du projet</label>
                                                <input type="text" name="projectName" class="form-control" placeholder="Entrer ...">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            <!-- textarea -->
                                            <div class="form-group">
                                                <label>Detail complet du projet</label>
                                                <textarea class="form-control" rows="3" name="projectDetails"
                                                          placeholder="Entrer ..."></textarea>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            <!-- text input -->
                                            <div class="form-group">
                                                <label>Montant du pret voulu</label>
                                                <input type="number" class="form-control" name="amountWanted" placeholder="Entrer ...">
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col">
                                            <!-- text input -->
                                            <div class="form-group">
                                                <label>Echeance de remboursement (Exemple: 10000 chaque 2 mois )</label>
                                                <div class="row">
                                                    <div class="col-sm-auto">
                                                        <input type="number" class="form-control" name="modalityAmount"
                                                               placeholder="Entrer ...">
                                                    </div>
                                                    <div class="col-sm-auto">
                                                        <label>Chaque</label>
                                                    </div>
                                                    <div class="col-sm-auto">
                                                        <input type="number" class="form-control" name="modalityNumberOfMonths"
                                                               placeholder="Entrer ...">
                                                    </div>
                                                    <div class="col-sm-auto">
                                                        <label>Mois</label>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-sm-6">
                                            <!-- checkbox -->
                                            <div class="form-group clearfix">


                                                <div class="icheck-primary d-inline">
                                                    <input type="checkbox" id="checkboxPrimary3" name="confirmation" required>
                                                    <label for="checkboxPrimary3">
                                                        Je confiirme sur l'honneur la verracité des informations
                                                        entrées.
                                                    </label>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </form>
                            </div>
                            <!-- /.card-body -->
                            <div class="card-footer">
                                <button type="submit" class="btn btn-info">Enregister et continuer</button>
                            </div>
                        </div>
                        <!-- /.card -->
                    </form>

                </div>
                <!--/.col (right) -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
{% endblock %}


