{% extends 'layout.html.twig' %}

 {% block stylesheets %}
     {{ parent() }}
     {{ encore_entry_link_tags('form_validation') }}
 {% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('form_validation') }}
{% endblock %}

{% block body %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>General Form</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">General Form</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- right column -->
                <div class="col-lg-12">
                    <form method="post" id="addProjectForm">
                        <!-- general form elements disabled -->
                        <div class="card card-warning">
                            <div class="card-header">
                                <h3 class="card-title">Informations du projet</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">

                                <div class="row">
                                    <div class="col">
                                        <!-- text input -->
                                        <div class="form-group">
                                            <label for="projectNameId">Nom du projet</label>
                                            <input type="text" name="projectName" class="form-control" id="projectNameId" placeholder="Entrer ...">
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col">
                                        <!-- textarea -->
                                        <div class="form-group">
                                            <label for="projectDetailsId">Detail complet du projet</label>
                                            <textarea class="form-control" rows="3" name="projectDetails"
                                                      id="projectDetailsId" placeholder="Entrer ..."></textarea>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col">
                                        <!-- text input -->
                                        <div class="form-group">
                                            <label for="amountWantedId">Montant du pret voulu</label>
                                            <input type="number" class="form-control" name="amountWanted" id="amountWantedId" placeholder="Entrer ...">
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col">
                                        <div class="form-group">
                                            <label>Ajouter le fichier du plan d'affaires</label>
                                            <div class="input-group">
                                                <div class="custom-file">
                                                    <input type="file" class="custom-file-input" id="business_plan_doc" name="businessPlanDoc">
                                                    <label class="custom-file-label" for="business_plan_doc">Choose file</label>
                                                </div>
                                                <div class="input-group-append">
                                                    <span class="input-group-text">Upload</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col">
                                        <div class="form-group">
                                            <label>Ajouter un autre fichier par rapport a votre projet</label>
                                            <div class="input-group">
                                                <div class="custom-file">
                                                    <input type="file" class="custom-file-input" id="detailsExtraDoc" name="detailsExtraDoc">
                                                    <label class="custom-file-label" for="detailsExtraDoc">Choose file</label>
                                                </div>
                                                <div class="input-group-append">
                                                    <span class="input-group-text">Upload</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col">
                                        <!-- text input -->
                                        <div class="form-group">
                                            <label>Echeance de remboursement (Exemple: 10000 FCFA chaque 2 mois )</label>
                                            <div class="row">
                                                <div class="col-sm-auto">
                                                    <input type="number" class="form-control" name="modalityAmount"
                                                           id="modalityAmountId" placeholder="Entrer ...">
                                                </div>
                                                <div class="col-sm-auto">
                                                    <label>Chaque</label>
                                                </div>
                                                <div class="col-sm-auto">
                                                    <input type="number" min="1" class="form-control" name="modalityNumberOfMonths"
                                                           id="modalityNumberOfMonthsId" placeholder="Entrer ...">
                                                </div>
                                                <div class="col-sm-auto">
                                                    <label>Mois</label>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-sm-6">
                                        <!-- checkbox -->
                                        <div class="form-group clearfix">


                                            <div class="icheck-primary d-inline">
                                                <input type="checkbox" required="true" id="checkboxPrimary3" name="confirmation">
                                                <label for="checkboxPrimary3">
                                                    Je confiirme sur l'honneur la verracité des informations
                                                    entrées.
                                                </label>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <!-- /.card-body -->
                            <div class="card-footer">
                                <button type="submit" class="btn btn-info">Enregister et continuer</button>
                            </div>
                        </div>
                        <!-- /.card -->
                    </form>
                </div>
                <!--/.col (right) -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->

{% endblock %}