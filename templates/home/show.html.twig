{% extends 'base.html.twig' %}
{% block title %} {{ pin.title}} {% endblock %}
{% block body %}

    <article>
            <h2> {{ pin.title }}</h2>
            <p>{{ pin.description }}</p>
    </article>

    <a href="{{ path('app_edit',{ 'id': pin.id }) }}">Edit Me</a> |
    <a href="#" onclick="event.preventDefault(); confirm('Are you sure you want to delete?') && document.getElementById('js-pin-delete').submit();">Delete</a>

    <form id="js-pin-delete"  action="{{ path('app_delete',{ 'id': pin.id}) }}" method="post" style="display: none;">
        <input type="hidden"  name="token" value="{{ csrf_token('pin_deletion_' ~ pin.id) }}">
        <input type="hidden" name="_method" value="DELETE">
    </form>

{% endblock %}